<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Species</title>
</head>
<body>
    <%- include('../partials/nav') %>
    <h1>New Species Form</h1>
    <form method="POST" action="/organisms">
        <div>
            <label for="name">Species Name</label>
            <input type="text" name="name" id="name" required />
        </div>

        <div>
            <label for="category">Classification</label>
            <select name="category" id="category">
                <option value="plants">Plant</option>
                <option value="animals">Animal</option>
                <option value="fungi">Fungi</option>
                <option value="protozoa">Protozoa</option>
                <option value="algae">Algae</option>
                <option value="archaens">Archaens</option>
            </select>
        </div>

        <div>
            <label for="habitat">Habitat</label>
            <textarea id="habitat" name="habitat" rows="5"></textarea>
        </div>

        <div>
            <label for="location">Location</label>
            <textarea id="location" name="location" rows="5"></textarea>
        </div>

        <fieldset>
            <legend id="classification">Classification</legend>
            <div>
                <label for="domain">Domain:</label>
                <input type="text" name="domain" id="domain">
            </div>
            <div>
                <label for="kingdom">Kingdom:</label>
                <input type="text" name="kingdom" id="kingdom">
            </div>
            <div>
                <label for="phylum">Phylum:</label>
                <input type="text" name="phylum" id="phylum">
            </div>
            <div>
                <label for="class">Class:</label>
                <input type="text" name="class" id="class">
            </div>
            <div>
                <label for="order">Order:</label>
                <input type="text" name="order" id="order">
            </div>
            <div>
                <label for="family">Family:</label>
                <input type="text" name="family" id="family">
            </div>
            <div>
                <label for="genus">Genus:</label>
                <input type="text" name="genus" id="genus">
            </div>
            <div>
                <label for="species">Species:</label>
                <input type="text" name="species" id="species">
            </div>
        </fieldset>
    
        <button type="submit">Add Species</button>
    </form>
</body>
</html>
